<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/white"
    tools:context=".activity.YouTubeVideoList">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/title_bar_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/header"
                        android:layout_alignParentTop="true">
                        <ImageView
                            android:id="@+id/WebsiteHome"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ic_baseline_menu_24"
                            />
                        <ImageView
                            android:id="@+id/img_noti"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@id/img_share"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_baseline_notifications_24"
                            />
                        <ImageView
                            android:id="@+id/sideBarHome"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/logo"
                            android:layout_toRightOf="@id/WebsiteHome"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" />


                        <ImageView
                            android:id="@+id/img_share"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_baseline_share_24" />

                        <TextView
                            android:id="@+id/titleHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            style="@style/viewParent.headerText"
                            android:text="Live Classes"
                            android:fontFamily="@font/hindbold"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />


                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/layout_filter"
                        android:layout_width="match_parent"
                        android:layout_alignParentEnd="true"
                        android:elevation="5dp"
                        android:visibility="gone"
                        android:background="@drawable/circularbluebordersolidmiddle"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/faculty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:background="@drawable/bottom_layout"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp">
                            <Spinner
                                android:id="@+id/spinner_faculty"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:entries="@array/filter" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/faculty_selection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:background="@drawable/bottom_layout"
                            android:layout_below="@id/faculty"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp">
                            <Spinner
                                android:id="@+id/select_option"
                                android:layout_width="match_parent"
                                android:entries="@array/filter"
                                android:textAlignment="viewStart"
                                android:layout_height="40dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/today_classes"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@id/title_bar_home"
                        android:background="@color/white"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/noclasses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Live Class Found"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/proximanovaregular"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/gradientViolet" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="match_parent">
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/live_refresh">




                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/all_liveClasses"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="65dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                    </RelativeLayout>

                </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_layout"
        android:layout_alignParentBottom="true"
        android:weightSum="5">
        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_user"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_speedometer"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanovaregular"
                android:layout_marginTop="5dp"
                android:layout_below="@id/image_home"
                android:textColor="#111"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_test_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_test"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_list"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Series"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanovaregular"
                android:layout_below="@id/image_test"
                android:textColor="#111"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_home"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/proximanovaregular"
                android:layout_below="@id/image_home"
                android:textColor="#111"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_doubt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_doubt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_questions"
                android:layout_gravity="center"

                />
            <TextView
                android:id="@+id/text_doubt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask Doubt"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanovaregular"
                android:textSize="12sp"
                android:layout_below="@id/image_doubt"
                android:textColor="#111"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_giftbox"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referral &amp; Earn"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanovaregular"
                android:textSize="12sp"
                android:layout_below="@id/image_notification"
                android:textColor="#111"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>