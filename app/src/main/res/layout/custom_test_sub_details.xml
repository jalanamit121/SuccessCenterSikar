<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/branch_live1"
    android:background="@drawable/bottom_layout"
    android:elevation="3dp"
    android:clickable="true">


    <TextView
        android:id="@+id/txt_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="60 days"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:textColor="#111"
        android:textSize="14dp" />
    <ImageView
        android:id="@+id/img_rupee"
        android:layout_height="12dp"
        android:layout_width="10dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:src="@drawable/ic_rupee"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/txt_discount"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/edit_text"
        android:layout_toRightOf="@id/img_rupee"
        android:text="500"
        android:layout_marginRight="5dp"/>




    <RelativeLayout
        android:id="@+id/layout_buy"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/buynow_bg"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/header"
            android:visibility="visible"
            android:textSize="12sp"
            android:fontFamily="@font/hindbold"
            android:text="Buy Now"/>
    </RelativeLayout>

</RelativeLayout>
