<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="30sp"
            android:drawableStart="@drawable/ic_baseline_close_24"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
       <ImageView
           android:id="@+id/selected_image"
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:layout_below="@id/txt_cancel"/>
        <TextView
            android:id="@+id/txt_re_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-select Image"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/hindregular"
            android:background="@drawable/onlinesubmitbtm"
            android:padding="18dp"
            android:layout_below="@id/selected_image"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Image"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hindregular"
            android:background="@drawable/onlinenextbtm"
            android:padding="18dp"
            android:layout_toRightOf="@id/txt_re_select"
            android:layout_below="@id/selected_image"
            android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>
