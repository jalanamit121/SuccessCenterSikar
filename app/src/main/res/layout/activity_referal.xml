<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReferalActivity">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_referral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/title_bar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/WebsiteHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"

            />

        <ImageView
            android:id="@+id/img_noti"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/img_share"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_notifications_24"
            />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_share_24" />

        <TextView
            android:id="@+id/titleHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/viewParent.headerText"
            android:text="Referral &amp; Coupon"
            android:fontFamily="@font/hindbold"
            android:layout_marginStart="25dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>
                <TextView
                    android:id="@+id/txt_referal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_bar_home"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Referral Code"/>
                <RelativeLayout
                    android:id="@+id/layout_referal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/referal_bg"
                    android:padding="10dp"
                    android:gravity="center"
                    android:elevation="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/txt_referal">

                    <TextView
                        android:id="@+id/txt_referal_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/edit_text"
                        android:textSize="26sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_copy_referal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_referal"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:id="@+id/img_copy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_file_copy_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COPY CODE"
                        android:textSize="12dp"
                        android:textColor="@color/edit_text"
                        android:layout_toRightOf="@id/img_copy"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_share_referal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/btn_copy_referal"
                    android:layout_below="@id/layout_referal"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:id="@+id/img_referal"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_share_blue_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHARE"
                        android:textSize="12dp"
                        android:textColor="@color/edit_text"
                        android:layout_toRightOf="@id/img_referal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_below="@id/btn_copy_referal"/>
                <LinearLayout
                    android:id="@+id/layout_total"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/btn_copy_referal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_margin="10dp"
                        android:elevation="3dp"
                        android:padding="6dp"
                        android:background="@drawable/referal_bg"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Referral"
                            android:textSize="14dp"
                            android:textColor="@color/edit_text"/>
                        <TextView
                            android:id="@+id/txt_total_referal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12345"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/edit_text"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/referal_bg"
                        android:gravity="center"
                        android:elevation="3dp"
                        android:padding="6dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Points"
                            android:textSize="14dp"
                            android:textColor="@color/edit_text"/>
                        <TextView
                            android:id="@+id/txt_total_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12345"
                            android:textSize="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/edit_text"/>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@id/layout_total"/>
<RelativeLayout
    android:id="@+id/layout_coupan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:layout_below="@id/layout_total">


                <TextView
                    android:id="@+id/txt_redeem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Redeem Coupon"/>

                <LinearLayout
                    android:id="@+id/layout_redeem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/txt_redeem">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="250dp"
                        android:gravity="center"
                        android:id="@+id/emailll"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp">

                        <EditText
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textSize="18sp"
                            android:textColor="@color/edit_text"
                            android:fontFamily="@font/proximanovaregular"
                            android:id="@+id/editTextEmail"
                            android:inputType="text"
                            android:textColorHint="@color/edit_text"
                            android:hint="Enter Redeem Code"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/btn_redeem"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:background="@drawable/btn_savenext"
                            android:text="redeem"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
</RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/layout_coupan"/>
                <RelativeLayout
                    android:id="@+id/layout_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"
                    android:elevation="2dp"
                    android:layout_below="@id/layout_coupan">
                    <TextView
                        android:id="@+id/txt_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms &amp; Conditions"
                        android:textColor="@color/edit_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:textSize="17sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/txt_terms_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms &amp; Conditions"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:visibility="gone"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>
                    <ImageView
                        android:id="@+id/img_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"/>
                    <ImageView
                        android:id="@+id/img_less"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_remove_24"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        android:layout_marginEnd="5dp"/>
                    <RelativeLayout
                        android:id="@+id/layout_termscondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#A4DDDDDD"
                        android:visibility="gone"
                        android:layout_marginTop="30dp"
                        android:layout_below="@id/txt_terms">
                        <TextView
                            android:id="@+id/txt_termscondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="terms and conditions"
                            android:textColor="@color/edit_text"
                            android:layout_marginStart="5dp"
                            android:visibility="gone"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="5dp"/>
                    </RelativeLayout>


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/layout_terms"/>
                <RelativeLayout
                    android:id="@+id/layout_works"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:elevation="2dp"
                    android:layout_below="@id/layout_terms">
                    <TextView
                        android:id="@+id/txt_works"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How Its Works"
                        android:textColor="@color/edit_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:textSize="17sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/txt_works_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How Its Works"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>
                    <ImageView
                        android:id="@+id/img_more_work"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"/>
                    <ImageView
                        android:id="@+id/img_less_work"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_remove_24"
                        android:visibility="gone"
                        android:layout_marginEnd="5dp"/>
                    <RelativeLayout
                        android:id="@+id/layout_howwork"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#A4DDDDDD"
                        android:visibility="gone"
                        android:layout_below="@id/txt_works"
                        android:layout_marginTop="30dp">
                        <TextView
                            android:id="@+id/txt_howwork"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="how it works"
                            android:textColor="@color/edit_text"
                            android:layout_marginStart="5dp"
                            android:visibility="gone"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="5dp"/>
                    </RelativeLayout>


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/layout_works"/>

            </RelativeLayout>

        </ScrollView>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_layout"
        android:layout_alignParentBottom="true"
        android:weightSum="5">
        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_user"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_speedometer"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanovaregular"
                android:layout_marginTop="5dp"
                android:layout_below="@id/image_home"
                android:textColor="#111"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_test_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_test"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_list"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Series"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanovaregular"
                android:layout_below="@id/image_test"
                android:textColor="#111"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_home"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/proximanovaregular"
                android:layout_below="@id/image_home"
                android:textColor="#111"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_doubt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_doubt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_questions"
                android:layout_gravity="center"

                />
            <TextView
                android:id="@+id/text_doubt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask Doubt"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanovaregular"
                android:textSize="12sp"
                android:layout_below="@id/image_doubt"
                android:textColor="#111"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_notification"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@color/footer_bg"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_giftbox"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/text_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referral &amp; Earn"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/proximanovaregular"
                android:textSize="12sp"
                android:layout_below="@id/image_notification"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>