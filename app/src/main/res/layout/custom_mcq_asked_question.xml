<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_mcq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottom_layout">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_businessman" />
        <TextView
            android:id="@+id/txt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:text="amit"
            android:fontFamily="@font/hindsemibold"
            android:layout_toRightOf="@id/profile_image_home"/>

        <TextView
            android:id="@+id/txt_ask_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would you like to ask?"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindbold"
            android:textSize="16sp"
            android:layout_below="@id/profile_image_home"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/txt_ask_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would you like to ask?"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindregular"
            android:textSize="16sp"
            android:layout_below="@id/txt_ask_title"
            android:layout_marginStart="10dp"/>


        <LinearLayout
            android:id="@+id/edit_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_layout"
            android:gravity="center"
            android:visibility="visible"
            android:clickable="true"
            android:layout_below="@id/txt_ask_question"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/a_letter"/>

            <TextView
                android:id="@+id/editTextOtion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_layout"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:visibility="visible"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion1_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_selected"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option A"
                android:visibility="gone"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion1_selected_correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_correct"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option A"
                android:visibility="gone"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion1_selected_flag0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_flag"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option A"
                android:visibility="gone"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_layout"
            android:gravity="center"
            android:layout_below="@id/edit_option1"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/b_letter"/>

            <TextView
                android:id="@+id/editTextOtion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_layout"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:visibility="visible"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion2_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_selected"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option B"
                android:visibility="gone"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion2_selected_correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_correct"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option B"
                android:visibility="gone"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion2_selected_flag0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_flag"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option B"
                android:visibility="gone"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_layout"
            android:gravity="center"
            android:layout_below="@id/edit_option2"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/c_letter"/>

            <TextView
                android:id="@+id/editTextOtion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_layout"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:textColor="@color/edit_text"
                android:visibility="visible"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
            android:id="@+id/editTextOtion3_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_selected"
            android:fontFamily="@font/proximanovaregular"
            android:text="Option C"
            android:textColor="@color/edit_text"
            android:textColorHint="@color/edit_text"
            android:inputType="text"
            android:visibility="gone"
            android:padding="18dp"
            android:layout_marginStart="5dp"
            android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion3_selected_correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_correct"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option C"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:visibility="gone"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion3_selected_flag0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_flag"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option C"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:visibility="gone"
                android:padding="18dp"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_layout"
            android:gravity="center"
            android:layout_below="@id/edit_option3"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_marginStart="5dp"
                android:layout_height="30dp"
                android:src="@drawable/d_letter"/>

            <TextView
                android:id="@+id/editTextOtion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_layout"
                android:fontFamily="@font/proximanovaregular"
                android:text=""
                android:padding="18dp"
                android:visibility="visible"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion4_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_selected"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option D"
                android:padding="18dp"
                android:visibility="gone"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion4_selected_correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_correct"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option D"
                android:padding="18dp"
                android:visibility="gone"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editTextOtion4_selected_flag0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_flag"
                android:fontFamily="@font/proximanovaregular"
                android:text="Option D"
                android:padding="18dp"
                android:visibility="gone"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:layout_marginStart="5dp"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_layout"
            android:layout_below="@id/edit_option4"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">


            <EditText
                android:id="@+id/editTextSolution"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_layout"
                android:fontFamily="@font/proximanovaregular"
                android:hint="Solution"
                android:padding="18dp"
                android:textColor="@color/edit_text"
                android:textColorHint="@color/edit_text"
                android:inputType="text"
                android:textSize="14sp" />
            <Button
                android:id="@+id/button_submit_solution"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit"
                android:fontFamily="@font/hindsemibold"
                android:background="@drawable/bottom_layout"/>

        </LinearLayout>
        <Button
            android:id="@+id/buttonPostMcq1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/mcq_button"
            android:fontFamily="@font/proximanovaregular"
            android:padding="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:layout_below="@id/edit_solution"
            android:text="View Solution"
            android:textColor="#699BF0" />


    </RelativeLayout>
</RelativeLayout>
