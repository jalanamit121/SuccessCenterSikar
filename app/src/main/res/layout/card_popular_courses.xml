<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/card_itemcourse_elevation"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">

<!--    app:cardElevation="10dp"-->

    <RelativeLayout
        android:id="@+id/Course_layout"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="@drawable/course_background"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/course_image"
            android:layout_width="135dp"
            android:layout_height="85dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/txt_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hindi grammer"
            android:textColor="#ea2d22"
            android:fontFamily="@font/hindbold"
            android:layout_toRightOf="@id/course_image"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Test Series"
            android:visibility="visible"
            android:layout_below="@id/txt_course"
            android:layout_toRightOf="@id/course_image"
            android:textColor="#111"
            android:textSize="12dp" />
        <RelativeLayout
            android:id="@+id/layout_purchased"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:layout_below="@id/txt_course"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="@drawable/purchased_bg">
            <TextView
                android:id="@+id/txt_purchased"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:visibility="visible"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/hindbold"
                android:text="Purchased"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_coming_soon"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_below="@id/txt_course"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:background="@drawable/comingsoon_bg">
        <TextView
            android:id="@+id/txt_coming_soon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#149cac"
            android:visibility="visible"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="@font/hindbold"
            android:text="Coming Soon"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_free"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txt_course"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="@drawable/free_bg">
            <TextView
                android:id="@+id/txt_free"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="visible"
                android:textSize="12sp"
                android:fontFamily="@font/hindbold"
                android:text="Free"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_buy"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txt_course"
            android:visibility="visible"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="@drawable/buynow_bg">
            <TextView
                android:id="@+id/txt_buy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/header"
                android:visibility="visible"
                android:textSize="12sp"
                android:fontFamily="@font/hindbold"
                android:text="Buy Now"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_view"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txt_course"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="@drawable/buynow_bg">
            <TextView
                android:id="@+id/txt_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/header"
                android:visibility="visible"
                android:textSize="12sp"
                android:fontFamily="@font/hindbold"
                android:text="View"/>
        </RelativeLayout>



        <ImageView
            android:id="@+id/img_rupee"
            android:layout_height="12dp"
            android:layout_width="10dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_rupee"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/course_image"/>

        <TextView
            android:id="@+id/txt_discount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ea2d22"
            android:text=""
            android:layout_below="@id/course_image"
            android:layout_toRightOf="@id/img_rupee"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/img_rupee1"
            android:layout_height="12dp"
            android:layout_width="10dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_rupee"
            android:layout_below="@id/course_image"
            android:layout_toRightOf="@id/txt_discount"/>

        <TextView
            android:id="@+id/txt_actual_price"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:textSize="15dp"
            android:textColor="#08496e"
            android:layout_marginBottom="5dp"
            android:text="0"
            android:layout_toRightOf="@id/img_rupee1"
            android:layout_below="@id/course_image"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
