<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/branch_sem"
    android:elevation="2dp"
    android:background="@drawable/shadow"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/branch_sem_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:clipToPadding="false"
        android:clickable="true"
        android:background="@drawable/shadow">
            <ImageView
                android:id="@+id/document_type"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/gec_subject"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/document_type"
                android:text="Example-1"
                android:textColor="#8EC3CF"
                android:textSize="16sp" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:id="@+id/teacher"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/edit_text"
            android:textSize="12sp"
            android:text="YouTube Video"
            android:layout_below="@id/gec_subject"
            android:layout_toEndOf="@id/document_type"/>
        <ImageView
            android:layout_height="20dp"
            android:layout_width="25dp"
            android:id="@+id/img_lock"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_lock"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />
        <ImageView
            android:layout_height="20dp"
            android:layout_width="25dp"
            android:id="@+id/img_Unlock"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_unlock"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />


</RelativeLayout>

</RelativeLayout>
